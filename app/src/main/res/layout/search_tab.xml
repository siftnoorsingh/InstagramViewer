<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewSearch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchViewDIscover"
        android:layout_gravity="center"
        android:minHeight="136dp"
        android:minWidth="136dp"
        android:nestedScrollingEnabled="false"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_enample" />

    <ImageView
        android:id="@+id/imageViewSearch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewSearch1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:minHeight="136dp"
        android:minWidth="136dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_enample" />

    <ImageView
        android:id="@+id/imageViewSearch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewDIscover"
        android:layout_centerHorizontal="true"
        android:minHeight="136dp"
        android:minWidth="136dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_enample" />

    <SearchView
        android:id="@+id/searchViewDIscover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>