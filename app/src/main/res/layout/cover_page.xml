<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/appLogo"
        android:contentDescription="@string/app_logo"
        android:src="@mipmap/ic_launcher2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"


        />


    <ImageView
        android:id="@+id/signUpArrow"
        android:src="@drawable/double_arrow_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_below="@id/appLogo"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#010009"
        android:textAlignment="center"
        android:text="Swipe Right for Sign Up"
        android:layout_alignBottom="@+id/signUpArrow"
        android:layout_toRightOf="@+id/signUpArrow"
        android:layout_toEndOf="@+id/signUpArrow" />


    <!--<TextureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textureView" />-->

</RelativeLayout>