<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.parse.ParseImageView
        android:id="@+id/icon_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/imageDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon_thumb"
        android:layout_toRightOf="@id/icon_thumb"
        android:textColor="#FF0000" />



    <TextView
        android:id="@+id/timestamp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageDescription"
        android:layout_toRightOf="@id/icon_thumb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:id="@+id/button_like"
        android:layout_alignBottom="@+id/icon_thumb"
        android:layout_toRightOf="@+id/imageDescription"
        android:layout_toEndOf="@+id/imageDescription"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />
</RelativeLayout>
